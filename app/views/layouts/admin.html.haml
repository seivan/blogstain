
!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'screen'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js", "application", :cache => true
    /[if IE]
      = stylesheet_link_tag 'ie'
      %a{ :href => 'http://www.mozilla.com/en-US/firefox/' }
        %h1 Get Firefox
    = yield(:head)
  
  %body
    #container
      #messages
        - flash.each do |name, message|
          %div{:id => "flash_#{name}"}=message
    %ul
      %li= #link_to posts_path, posts_path
      %li= #link_to users_path, users_path
      %li= #link_to pages_path, pages_path  
      - if show_title?
        %h1=h yield(:title)
      
      = yield

