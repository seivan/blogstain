- form_for @post do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :content
    %br
    = f.text_area :content
  %p
    = f.label :commentable
    %br
    = f.check_box :commentable
  %p
    = f.label :published
    %br
    = f.check_box :published
  %p
    = f.label :user_id
    %br
    = f.text_field :user_id
  %p
    = f.submit "Submit"
